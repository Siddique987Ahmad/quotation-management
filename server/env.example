# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/quotation_system"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-random"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Server Configuration
PORT=5000
NODE_ENV="production"

# CORS Configuration for VPS
FRONTEND_URL="https://your-domain.com"
CLIENT_URL="https://your-domain.com"
DOMAIN_NAME="your-domain.com"
VPS_IP="your-vps-ip-address"

# React App Configuration
REACT_APP_API_URL="https://your-domain.com/api"

# Email Configuration
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_SECURE=false
EMAIL_FROM="noreply@your-domain.com"

# File Upload Configuration
UPLOAD_PATH="/var/www/quotation-system/uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-here"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Configuration
APP_NAME="Quotation Management System"
APP_VERSION="1.0.0"
APP_URL="https://your-domain.com"
SUPPORT_EMAIL="support@your-domain.com"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="/var/www/quotation-system/logs/app.log"

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# SSL Configuration (if using direct SSL)
SSL_CERT_PATH="/etc/ssl/certs/your-domain.crt"
SSL_KEY_PATH="/etc/ssl/private/your-domain.key"

# Redis Configuration (if using Redis for caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# External Services
EXTERNAL_API_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
